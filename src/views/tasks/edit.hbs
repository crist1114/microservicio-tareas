<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">

  <h1 class="text-center text-3xl font-bold">Edit task</h1>

  {{#each tasks}}
  <form action="" method="POST" class="mt-4">
    <div class="mb-3">
    <input type="text" class="form-control" placeholder="Task title" name="title" value="{{title}}">

    <br>

    <textarea class="form-control" placeholder="Task description" name="description">{{description}}</textarea>
    </div>
    <button type="submit" class="btn-primary" >Send</button>

  </form>
  {{/each}}

</div>